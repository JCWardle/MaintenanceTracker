@model MaintenanceTracker.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Maintenance Tracker";
}

<h2>Maintenance Tracker</h2>

<p>
    Use this page to manage your vehicles, add recent maintence or export your vehicles details.
</p>

@if (Model.Vehicles.Any())
{
    <table>
        <h3>Manage your vehicles</h3>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Registration</th>
        </tr>
        @foreach (var v in Model.Vehicles)
        {
            @Html.DisplayFor(veh => v);
        }
    </table>
}

<h3>Add a new vehicle</h3>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>New Vehicle</legend>
        <ul>
            <li>
                @Html.LabelFor(v => v.Vehicle.Make)
                @Html.TextBoxFor(v => v.Vehicle.Make)
                @Html.ValidationMessageFor(v => v.Vehicle.Make)
            </li>
            <li>
                @Html.LabelFor(v => v.Vehicle.Model)
                @Html.TextBoxFor(v => v.Vehicle.Model)
                @Html.ValidationMessageFor(v => v.Vehicle.Model)
            </li>
            <li>
                @Html.LabelFor(v => v.Vehicle.Year)
                @Html.TextBoxFor(v => v.Vehicle.Year)
                @Html.ValidationMessageFor(v => v.Vehicle.Year)
            </li>
            <li>
                @Html.LabelFor(v => v.Vehicle.Registration)
                @Html.TextBoxFor(v => v.Vehicle.Registration)
                @Html.ValidationMessageFor(v => v.Vehicle.Registration)
            </li>
        </ul>
        <input type="submit" value="Create new vehicle"/>
    </fieldset>
}