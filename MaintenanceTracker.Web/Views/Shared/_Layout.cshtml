<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Maintenance Tracker</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    @RenderSection("Styles", false)
    
    <script src="~/Scripts/JQuery/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="~/Scripts/BootStrap/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/modernizr/modernizr-2.6.2.js"></script>
    @RenderSection("Scripts", false)
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Maintenance Tracker", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
            </div>
            <ul class="nav navbar-nav navbar-right">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li>
                        @Html.ActionLink("Sign up", "Register", "User")
                    </li>
                }
                else
                {
                    <li>
                        @Html.ActionLink("Manage", "Manage", "User")
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Maintenance Tracker</p>
        </footer>
    </div>
</body>
</html>