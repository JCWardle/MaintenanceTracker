@model MaintenanceTracker.Web.ViewModels.RegisterViewModel
<div class="well">
    <p class="lead">Register now</p>
    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        <div class="form-group row">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Username)
            </div>
            <div class="col-md-9">
                @Html.EditorFor(m => m.Username, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            @Html.ValidationMessageFor(m => m.Username)
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="col-md-9">
                @Html.EditorFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="col-md-9">
                @Html.EditorFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="col-md-9">
                @Html.EditorFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div>
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <button type="submit" class="btn btn-success btn-block">
            Register
        </button>
    }
</div>