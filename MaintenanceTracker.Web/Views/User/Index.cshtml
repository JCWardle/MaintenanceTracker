@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

@section Scripts
{
    <script src="~/Scripts/checkbox-x/checkbox-x.min.js" type="text/javascript"></script>
}

@section Styles
{
    <link href="~/Content/checkbox-x.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="well col-md-6 col-md-offset-3">
        <p class="lead">
            Login
        </p>
        @using (Html.BeginForm("Index", "User", FormMethod.Post))
        {
            <div class="row">
                @if (ViewData.ModelState.ContainsKey("WrongUsernamePassword"))
                {
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @Html.ValidationMessage("WrongUsernamePassword")
                    </div>
                }
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Username)
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(m => m.RememberMe, new {htmlattributes = new {data_toggle = "checkbox-x", data_three_state = "false"}})
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    <button type="submit" class="btn btn-success btn-block">
                        Login
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-3 col-md-6">
                    @Html.ActionLink("Forgot Password", "Forgot", "User", new {@class = "btn btn-default btn-block"})
                </div>
            </div>
        }
    </div>
</div>